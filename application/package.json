{
    "name": "easy-api-mocker",
    "version": "0.0.1",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "dev": "npm install && nodemon",
        "start": "nodemon ./dist/server.js",
        "prod": "npm run build && npm run start"
    },
    "dependencies": {
        "@types/express": "^4.16.1",
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "nodemon": "^1.18.9"
    },
    "devDependencies": {
        "jest": "24.0.0",
        "@types/jest": "23.3.13",
        "ts-jest": "23.10.5"
    },
    "jest": {
        "preset": "ts-jest",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "jsx"
        ],
        "moduleDirectories": [
            "node_modules",
            "bower_components",
            "src"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)"
        ]
    }
}
